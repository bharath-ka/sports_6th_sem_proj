<div class="jumbotron">
    <h2 class="text-center">Register Player</h2>
    <div id="content " class="container mt-4">


        <form action="/admin/playerCreate" method="post">

            <fieldset class="form-group">
                <legend class="lead">Your Info</legend>

                <div class="form-group">
                    <label class="form-control-label" for="name">Name</label>
                    <input class="form-control" pattern="^[A-Za-z -]+$" title="Enter your proper name" id="name" name="playerName" placeholder="Your Name"
                        value="" required>
                </div><!-- form-group -->

                <div class="form-group">
                    <label class="form-control-label" for="name">USN</label>
                    <input type="text" class="form-control" id="name" name="usn" placeholder="USN" value="">
                </div><!-- form-group -->

                <div class="form-group">
                    <label class="form-control-label" for="sport">Sport</label>
                    <select class="form-control" id="sport" name="sports">
                        <option>Choose</option>
                        <option value="Boxing">Boxing</option>
                        <option value="Carrom">Carrom</option>
                        <option value="Chess">Chess</option>
                        <option value="Carrom">Carrom</option>
                        <option value="Snooker">Snooker</option>
                        <option value="Squash">Squash</option>
                        <option value="Table Tennis">Table Tennis</option>
                        <option value="Weight Lifting">Weight Lifting</option>
                        <option value="Wrestling">Wrestling</option>
                        <option value="Basketball">Basketball</option>
                        <option value="Cricket">Cricket</option>
                        <option value="Football">Football</option>
                        <option value="Hockey">Hockey</option>
                        <option value="Tennis">Tennis</option>
                        <option value="Throwball">Throwball</option>
                        <option value="Volleyball">Volleyball</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <label class="form-control-label" for="gender">Gender</label>
                        <select class="form-control" id="gender" name="gender">
                            <option>Choose</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </label>
                </div><!-- form-group -->

                <div class="form-group">
                    <label class="form-control-label" for="name">Height</label>
                    <input type="number" class="form-control" id="name" name="height" placeholder="Height" value="">
                </div>


                <div class="form-group">
                    <label class="form-control-label" for="name">Weight</label>
                    <input type="text" class="form-control" id="name" name="weight" placeholder="Weight" value="">
                </div>
                <div class="form-group">
                    <label>
                        <label class="form-control-label" for="year">Year</label>
                        <select class="form-control" id="year" name="year">
                            <option>Choose</option>
                            <option value="1">First</option>
                            <option value="2">Second</option>
                            <option value="3">Third</option>
                            <option value="4">Fourth</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="name">Contact</label>
                    <input type="text" pattern="[789][0-9]{9}" title='Enter valid contact' class="form-control" id="name" name="contact" placeholder="Valid contact no"
                        value="">
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="name">Role</label>
                    <input type="text" class="form-control" id="name" name="role" placeholder="Role" value="">
                </div>
                <div id="operations">
                    <button class="btn btn-primary" type="submit" value="Submit">Submit</button>
                </div>
            </fieldset><!-- fieldset -->
